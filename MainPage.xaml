<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather_App.maui.MainPage">

    <Grid>
        <Image
            Source="clouds.png"
            Aspect="AspectFill" />

        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="25">

            <Label
                Text="23° C"
                FontSize="144"
                TextColor="White"
                FontAttributes="Bold"
                FontFamily="RobotoBold">
                <Label.Shadow>

                <Shadow
                        Brush="Black"
                        Offset="6,6"
                        Radius="6"
                        Opacity="0.6"></Shadow>

                </Label.Shadow>
            </Label>
            <Label
                Text="Yelahanka, Bengaluru"
                FontSize="35"
                TextColor="White" 
                HorizontalTextAlignment="Center"
                FontFamily="RobotoBold">
                <Label.Shadow>
                <Shadow
                        Brush ="Black"
                        Offset="2,2"
                        Radius="5"
                        Opacity="0.6"></Shadow>
                </Label.Shadow>
            </Label>

        </VerticalStackLayout>
    </Grid>

</ContentPage>