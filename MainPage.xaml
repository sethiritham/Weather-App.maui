<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather_App.maui.MainPage">

    <Grid>
        <Image
            Source="clouds.png"
            Aspect="AspectFill" />

        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="25">

            <Label
                Text="23° C"
                FontSize="96"
                TextColor="White"
                FontAttributes="Bold" >
                <Label.Shadow>

                <Shadow
                        Brush="Black"
                        Offset="6,2"
                        Radius="1.6"
                        Opacity="5"></Shadow>

                </Label.Shadow>
            </Label>
            <Label
                Text="Bengaluru"
                FontSize="32"
                TextColor="White" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>